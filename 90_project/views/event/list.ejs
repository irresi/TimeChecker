<!DOCTYPE html>
<html lang="en">
<%- include("../header"); -%>
<head>
  
  <link rel="stylesheet" href="http://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.css">
</head>
<body>

  <%- include("../menu"); -%>
  <%- include("../style"); -%>
  <!-- #E5FBFF -->
  <div class="container-fluid">
      <div class="container" style="background:white; padding:3%;margin-top:3%;" >
        <div class="row">
          <button type="button" class="btn btn-outline-info btn-rounded waves-effect"
            onclick="location.href='/api/event/new'">Create
          </button>
        </div>

        <p>&nbsp;</p>
        <table class="table table-striped table-bordered">
          <tr>
            <th><a class="listfont-sm">[이름]</a></th>
            <th><a class="listfont-sm">[시작 시간]</a></th>
            <th><a class="listfont-sm">[끝 시간]</a></th>
            <th><a class="listfont-sm">[태그]</a></th>
            <th><a class="listfont-sm">[삭제]</a></th>
          </tr>
          
          <% result.forEach(event =>{ %>
          <tr>

            <td>
              <a class="listfont-sm" onclick="location.href='/api/event/<%=event._id%>/id'">
                <%= event.Name%>
              </a>
            </td>
            <td>
              <a class="listfont-sm" onclick="location.href='/api/event/<%=event._id%>/id'">
                <%= event.created.getMonth()+1%>월
                <%= event.created.getDate()%>일
                <%= event.StartString %>
              </a>
            </td>
            <td>
              <a class="listfont-sm" onclick="location.href='/api/event/<%=event._id%>/id'">
                <%= event.created.getMonth()+1%>월
                <%= event.created.getDate()%>일
                <%= event.EndString %>
              </a>
            </td>
            <td>
              <a class="listfont-sm" onclick="location.href='/api/event/<%=event._id%>/id'">
                <%= event.tag%>
              </a>
            </td>
            <td>
            <a style="color:red;" onclick="location.href='/api/event/<%=event._id%>/delete'">삭제하기</a>
            </td>
          </tr>
          <%})%>
        </table>
      </div>
    <!-- 목록 -->
  </div>
  <%- include("../footer"); %>


  <script>
    //$(document.ready(function(){ .. });
    function dialogupdate() {
      dialog.open("<p>hello world</p>");
    }
  </script>
</body>

</html>